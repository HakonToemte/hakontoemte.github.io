@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
    string[] TableHeaders = new string[] { "Username", "Highscore" };
    if (Model.LoggedInUser != null)
    {
        Layout = "_LoggedLayout";
    }
}
<h1>@Model.LoggedInUser.UserName</h1>
<br>
<h3>User statistics</h3>
<table>
    <tr>
        <td>Number of games:</td>
        <td>@Model.GameCount</td>
    </tr>
    <tr>
        <td>Highscore:</td>
        <td>@Model.LoggedInUser.Highscore</td>
    </tr>
    <tr>
        <td>AverageScore:</td>
        <td>@Model.AverageScore</td>
    </tr>
</table>
