@page
@model UploadModel
@{
    ViewData["Title"] = "Upload";
    if (Model.LoggedUser != null)
    {
        Layout = "_LoggedLayout";
 
    }
}
<h1>Upload an image</h1>
<img id = "user_img" height = "400"  width = "600"  style = "border:solid" />
<form method="post" enctype="multipart/form-data">
  <label asp-for="ImageFile">Select image:</label>
  <input asp-for="ImageFile" type="file"  onchange="show(this)">
  <p> Add a label for your image</p> 
  <input name="label" type="text" required>
  <input type="submit">
</form>

<script type="text/javascript">  
   function show(input) {  
      if (input.files && input.files[0]) {  
      var filerdr = new FileReader();  
      filerdr.onload = function (e) {  
         $('#user_img').attr('src', e.target.result);  
      }  
      filerdr.readAsDataURL(input.files[0]);  
      cutImageUp();
   } 
}  
</script>  
