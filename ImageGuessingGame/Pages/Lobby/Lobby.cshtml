@page
@model LobbyModel
@{
    ViewData["Title"] = "Lobby";
    string[] TableHeaders = new string[] {};
    if (Model.LoggedUser != null)
    {
        Layout = "_LoggedLayout";
    }
}

<a class="btn btn-primary" asp-page="CreateGame" >Create Game</a> 
<a class="btn btn-primary" asp-page="Upload"> Upload Image</a>
<h2>Recent games</h2>
<table class="table  table-striped table-hover">
    <thead>
        <tr>
            <th>Game ID</th>
            <th>User</th>
            <th>Image label</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Games)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Guesser.User</td>
                <td>@item.Oracle.Label</td>
            </tr>
        }
    </tbody>
</table>


